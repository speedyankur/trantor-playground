<Alloy>
	<Window title="Detail View" id="detailWindow">
		<ScrollView layout="vertical" >
			<View class="field">
				<Label class="label">Project:</Label>
				<Label class="value" id="projectNameField"></Label>
			</View>
			<View class="borderBottom"></View>
			<View  class="field" >
				<Label class="label">Description:</Label>
				<Label class="value" id="issueDescriptionField"></Label>
			</View>
			<View class="borderBottom"></View>
			<View  class="field">
				<Label class="label">Date Identified:</Label>
				<Label class="value" id="dateIdentifiedField"></Label>
			</View>
			<View class="borderBottom"></View>
			<View  class="field">
				<Label class="label">Date resolved:</Label>
				<Label class="value" id="dateResolvedField"></Label>
			</View>
			<View class="borderBottom"></View>
			<View  class="field">
				<Label class="label">Severity:</Label>
				<Label class="value" id="severityField"></Label>
			</View>
			<View class="borderBottom"></View>
			<View  class="field">
				<Label class="label">Mitigation Plan:</Label>
				<Label class="value" id="mitigationField"></Label>
			</View>
			<View class="borderBottom"></View>
			<View  class="field">
				<Label class="label">Comments:</Label>
				<Label class="value" id="commentsField"></Label>
			</View>
		</ScrollView>
			<View id="buttonBar">
				<View  id="openBtn" class="normalState" autoStyle="true" name="open" onClick="statusButtonClicked">
					<Label class="buttonBarLabel" name="open">Open</Label>
				</View>
				<View class="buttonBarSeperator"></View>
				<View  id="progressBtn" class="normalState" autoStyle="true" name="in-progress" onClick="statusButtonClicked" >
					<Label class="buttonBarLabel" name="in-progress">In-Progress</Label>
				</View>
				<View class="buttonBarSeperator"></View>
				<View  id="closeBtn" class="normalState" autoStyle="true" name="close" onClick="statusButtonClicked">
					<Label class="buttonBarLabel" name="close">Close</Label>
				</View>
			</View>		
	</Window>
</Alloy>