<Alloy>
	<Tab title="New Issue" icon="KS_nav_ui.png">
		<Window title="New Issue *" >
			<View id="pickerView" height="250" bottom="-250" zIndex="10" backgroundColor="#fff" width="100%" layout="vertical">
				<View bottom="0" height='50' backgroundColor='#778899'>
					<Button  title='Done' height='40' right='10' width='120' onClick="hidePickerView"></Button>
				</View>
				<Picker id="picker" useSpinner="true" selectionIndicator="true" type="Ti.UI.PICKER_TYPE_DATE"></Picker>
			</View>
			<ScrollView layout="vertical">

				<Label class="label">Project:</Label>
				<TextField hintText="Project Name"></TextField>
				<Label class="label">Description:</Label>
				<TextField hintText="Project Description"></TextField>
				
				<Label class="label">Date Identified:</Label>
				<TextField id="dateIdentified" name="DATE_IDENTIFIED" onFocus="showPickerView"  hintText="Identified Date"  ></TextField>
				
				<Label class="label">Date resolved:</Label>
				<TextField id="dateResolved" name="DATE_RESOLVED" onFocus="showPickerView"  hintText="Resolved Date"  ></TextField>
				
				<Label class="label">Status:</Label>
				<TextField hintText="Status"></TextField>
				<Label class="label">Severity:</Label>
				<TextField hintText="Severity"></TextField>
				<Label class="label">Mitigation Plan:</Label>
				<TextArea></TextArea>
				<Label class="label">Comments:</Label>
				<TextArea></TextArea>
				
				<Button top="15"  id="next" backgroundColor="#30D1F4" backgroundSelectedColor="#808080" title="Save"  ></Button>

			</ScrollView>

		</Window>
	</Tab>
</Alloy>